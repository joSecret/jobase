---
import BaseHead from '@comp/common/BaseHead.astro';
import Header from '@comp/theme/Header.astro';
import Footer from '@comp//theme/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '@/const';

interface Props {
  title?: string;
}

const { title = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead
      title={`${title} - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
  </head>

  <body>
    <Header />

    <main class='main'>
      <slot />
    </main>

    <Footer />
  </body>
</html>
